extends base

block content
  .landing
    .container
      .text
        h1 Welcome, Shop and sell now
        p
          | All of our products are professionally handmade, you can buy
          | whatever you want and also sell your products here.
        a.btn(href='products') SHOP NOW
      .imagee
        img(src='/images/landing1.png' alt='home-commerce')
      a.go-down(href='#articles')
        i.bi.bi-chevron-double-down
  // End Landing
  // start swiper Categories
  .container
    h2.special-heading Categories
    p All products are handmade
  .slider-contain
    .container-slide
      .swiper.mySwiper
        .swiper-wrapper
          each category in categories
            .swiper-slide(data-filterr=`${category.name}`)
              a(href=`/products/category/${category.name}`)
                .img-box
                  img(src=`/images/categories/${category.image}` alt=`${category.name}`)
                .catigory-name
                  h3= `${category.name}`
                .overlay
                  p Show More
        .swiper-button-next
        .swiper-button-prev
  // end swiper Categories
  // start sell product
  .video
    .video-container
      video(autoplay='' muted='' loop='' height='500')
        source(src='/images/handmade.mp4' type='video/mp4')
    .text
      h2 Sell your product now
      p Start your own project
      if user
        a(href='/addProduct') Sell Products
      else
        a(href='/login') log in to sell
  // end sell product
  // start latest income product
  .container
    h2.special-heading New Comer
    p All products are handmade
  .slider-contain
    .container-slide
      .swiper.mySwiper
        .swiper-wrapper
          each product in products
            .swiper-slide.slides
              .img-box
                img(src=`/images/products/${product.images[0]}` alt=`${product.title}`)
              h5.product-title= product.title
              .details
                span= `${product.price} EGP`
                if user
                  a.btn-add
                    i.bi.bi-cart3.addToCart(data-product-id=`${product.id}`) 
                else 
                  a.btn-add(href='/login')
                    i.bi.bi-cart3.addToCart
              a.detail(href=`/products/${product.id}`) Details
        .swiper-button-next
        .swiper-button-prev
  // end latest income product
  // start app section
  .app
    .app-text DOWNLOAD
    .app-text2 OUR APP
    span.app-text3 AVAILABLE ON 
    .app-img1
      img(src='/images/app.png' alt='')
    .qr
      img(src='/images/qr code.png' alt='')
    span.app-text4 SOON WILL BE AVAILABLE ON 
    .app-img2
      img(src='/images/google-play.png' alt='')
    .mop
      img(src='/images/preview.png' alt='')
  // end app section
  // start features
  #features.container
    h2.special-heading Features
    p We provide to you
  .features
    .container
      .feat
        i.bi.bi-house-door
        h3 Uniq designs
        p
          | Unique, hand-made designs for you that do not resemble the usual products manufactured in factories
      .feat
        i.bi.bi-truck
        h3 Fast Delivery
        p Fast delivery, save products and product arrival in a maximum of two days
      .feat
        i.bi.bi-wallet2
        h3 Easy payment
        p
          | Providing more than one secure payment method for you, cash on delivery or payment by Visa
  // end features

  i.fas.fa-arrow-up
  script(src='/jqueryLib.js')
  script(src='http://unpkg.com/swiper/swiper-bundle.min.js')
  script(src='/index.js')
