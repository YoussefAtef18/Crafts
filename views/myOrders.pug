extends base

block content

  main.main
    .user-view
      .user-view__menu
        ul.side-nav
          li
            a(href='me')
              i.bi.bi-gear-fill
              |  Settings
          li
            a(href='myProducts')
              i.bi.bi-grid-3x3-gap-fill
              |  My products
          li.side-nav--active
            a(href='myOrders')
              i.bi.bi-cart-check-fill
              |  My orders
          li
            a(href='myReviews')
              i.bi.bi-chat-fill
              |  My reviews
          li
            a(href='addProduct')
              i.bi.bi-file-plus-fill
              |  Add Product
      .user-view__content
        .user-view__form-container.user-profile
          .container-orders
            each order in orders
              .products
                each product in order.products
                  .pro-card
                    img(src=`/images/products/${product.product.images[0]}` alt=`${product.product.title}`)
                    .details-order
                      h5.product-title= product.product.title
                      .price-button
                        span= `${product.product.price} EGP`
                      a.detail(href=`/products/${product.product._id}`) Details
