extends base

block content

  main.main
    .user-view
      .user-view__menu
        ul.side-nav
          li
            a(href='me')
              i.bi.bi-gear-fill
              |  Settings
          li.side-nav--active
            a(href='myProducts')
              i.bi.bi-grid-3x3-gap-fill
              |  My products
          li
            a(href='myOrders')
              i.bi.bi-cart-check-fill
              |  My orders
          li
            a(href='myReviews')
              i.bi.bi-chat-fill
              |  My reviews
          li
            a(href='addProduct')
              i.bi.bi-file-plus-fill
              |  Add Product

      .user-view__content
        .user-view__form-container.user-profile
          .container-orders
            each product in products
              .profile-order
                .close_icon
                  i.bi.bi-x.deleteProductBtn(data-product-id=`${product.id}`)
                img(src=`/images/products/${product.images[0]}` alt=`${product.title}`)
                .details-order
                  h5.product-title= product.title
                  span= `${product.price} EGP`
                  .price-button
                    a.btn-add(href=(`/editProduct/${product.id}`)) edit
                    if (product.available === true)
                      button.hideProductBtn(data-product-id=`${product.id}`, data-available =`${product.available=false}`) hide
                    else 
                      button.hideProductBtn(data-product-id=`${product.id}`, data-available =`${product.available=true}`) show
